<% const body = () => { %>
  <section class="hero-panel">
    <div class="hero-panel__info">
      <span class="chip chip--glow">Single channel</span>
      <h1>Zap, tuned for your stream</h1>
      <p class="muted-copy">
        Drop this dashboard into your Twitch panels or overlays. Once you authorize your broadcaster account, the
        page flips into a dark, Twitch-inspired timeline that reflects only your clips and nothing else.
      </p>
      <div class="hero-actions">
        <a class="button" href="/auth/twitch">Connect Twitch channel</a>
      </div>
    </div>
    <div class="hero-panel__stats">
      <div class="stat-card">
        <p class="stat-label">Clip command</p>
        <p class="stat-value">!clip</p>
        <span class="muted-copy">Bot listens for moderators + broadcaster</span>
      </div>
      <div class="stat-card">
        <p class="stat-label">Web clipping</p>
        <p class="stat-value">Disabled</p>
        <span class="muted-copy">Only chat can create clips</span>
      </div>
    </div>
  </section>

  <% const noticeMessage = typeof notice !== 'undefined' ? notice : null; %>
  <% if (noticeMessage) { %>
    <section class="panel">
      <p class="muted-copy"><%= noticeMessage %></p>
    </section>
  <% } %>

  <section class="panel panel--grid">
    <article class="panel-card">
      <h3>Live-first logging</h3>
      <p class="muted-copy">
        Zap tracks clip requests as they happen in chat and surfaces them grouped by your stream session so you can
        review highlights right after the broadcast.
      </p>
    </article>
    <article class="panel-card">
      <h3>Viewer-powered workflow</h3>
      <p class="muted-copy">
        Keep the command visible on stream, let the chat collect content, and trust Zap to store a clean list of what
        needs editing without extra dashboard buttons.
      </p>
    </article>
    <article class="panel-card">
      <h3>Secure connection</h3>
      <p class="muted-copy">
        OAuth tokens refresh automatically; nothing else can be added without your streamer login, and every session
        is scoped to your broadcaster ID.
      </p>
    </article>
  </section>
<% } %>
<%- include('layout', { title: 'Welcome', body, sessionActive }) %>
