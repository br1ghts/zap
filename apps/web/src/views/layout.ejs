<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= title %> | Zap</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap');

      :root {
        --bg: #040409;
        --panel: #0d0f18;
        --panel-strong: #17182a;
        --border: rgba(255, 255, 255, 0.08);
        --muted: rgba(255, 255, 255, 0.65);
        --muted-strong: rgba(255, 255, 255, 0.8);
        --accent: #9147ff;
        --accent-strong: #6f2ff2;
        --success: #00d1a7;
        --warn: #ffcb42;
        --danger: #ff5c67;
        --glow: 0 20px 45px rgba(145, 71, 255, 0.35);
        --card-border: rgba(255, 255, 255, 0.05);
      }

      * {
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
        min-height: 100vh;
        background: radial-gradient(circle at top, rgba(145, 71, 255, 0.25), transparent 45%),
          radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.08), transparent 35%),
          var(--bg);
        color: #f5f5f5;
      }

      .page-shell {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      header {
        padding: 1.5rem 1.75rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 1px solid var(--border);
        background: rgba(3, 3, 10, 0.8);
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(20px);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 0.85rem;
      }

      header .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      header .brand-icon {
        width: 40px;
        height: 40px;
        border-radius: 16px;
        background: linear-gradient(145deg, #6b3ef6, #c472ff);
        display: grid;
        place-items: center;
        font-weight: 600;
        letter-spacing: 0.02em;
        font-family: 'Space Grotesk', sans-serif;
      }

      header .brand-name {
        font-size: 1.25rem;
        font-weight: 600;
      }

      header .brand-tagline {
        font-size: 0.85rem;
        color: var(--muted);
      }

      main {
        flex: 1;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem 1.75rem 2.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        padding: 0.75rem 1.25rem;
        background: linear-gradient(135deg, var(--accent), var(--accent-strong));
        color: #fff;
        font-weight: 500;
        border-radius: 999px;
        border: none;
        text-decoration: none;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: var(--glow);
      }

      .button:hover {
        transform: translateY(-1px) scale(1.01);
        box-shadow: 0 25px 60px rgba(145, 71, 255, 0.4);
      }

      .button.secondary {
        background: transparent;
        border: 1px solid var(--border);
        box-shadow: none;
        color: #f2f2f7;
      }

      .hero-card {
        background: var(--panel);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        box-shadow: var(--glow);
      }

      .hero-card h1 {
        margin: 0;
        font-size: 2rem;
      }

      .hero-card p {
        margin: 0;
        color: var(--muted);
        max-width: 540px;
      }

      .hero-actions {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .muted-copy {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
        line-height: 1.5;
      }

     .panel {
       background: var(--panel);
       border: 1px solid var(--border);
       border-radius: 18px;
       padding: 1.5rem;
       display: flex;
       flex-direction: column;
       gap: 0.75rem;
       box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.45);
     }

      .panel-heading {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
      }

      .panel-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
      }

      .panel-heading h2 {
        margin: 0;
        font-size: 1.3rem;
      }

      .panel-heading p {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
      }

      .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1rem;
      }

      .card {
        background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.01));
        border: 1px solid rgba(255, 255, 255, 0.04);
        border-radius: 16px;
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        min-height: 170px;
      }

      .card h3 {
        margin: 0;
        font-size: 1.15rem;
      }

      .card span {
        font-size: 0.9rem;
        color: var(--muted);
      }

      .chip {
        display: inline-flex;
        align-items: center;
        padding: 0.2rem 0.65rem;
        border-radius: 999px;
        background: rgba(145, 71, 255, 0.15);
        border: 1px solid rgba(145, 71, 255, 0.35);
        font-size: 0.78rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
      }

      thead {
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
      }

      th,
      td {
        padding: 0.85rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        border-right: 1px solid rgba(255, 255, 255, 0.03);
      }

      th:last-child,
      td:last-child {
        border-right: none;
      }

      tbody tr {
        transition: background 0.2s ease;
      }

      tbody tr:hover {
        background: rgba(255, 255, 255, 0.03);
      }

      dl {
        margin: 0;
        display: grid;
        grid-template-columns: 120px 1fr;
        row-gap: 0.35rem;
        column-gap: 0.85rem;
        font-size: 0.9rem;
      }

      dt {
        color: var(--muted);
        font-weight: 500;
      }

      dd {
        margin: 0;
        font-weight: 600;
      }

      textarea,
      input {
        width: 100%;
        background: var(--panel-strong);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 0.75rem;
        color: #fff;
        font-family: inherit;
      }

      .form-stack {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
      }

      .form-stack label {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
      }

      .table-scroll {
        overflow-x: auto;
      }

      .result {
        font-size: 0.9rem;
        color: var(--muted);
        min-height: 1.2rem;
      }

      @media (max-width: 640px) {
        main {
          padding: 1.25rem 1rem 2rem;
        }

        .panel {
          padding: 1.2rem;
        }

        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 0.5rem;
        }

        .hero-panel__stats {
          flex-direction: column;
          align-items: stretch;
        }
      }

      .hero-panel {
        border: 1px solid var(--card-border);
        border-radius: 24px;
        background: linear-gradient(145deg, rgba(145, 71, 255, 0.15), rgba(7, 8, 17, 0.95));
        padding: 2rem;
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.45);
      }

      .hero-panel__info {
        flex: 1 1 320px;
        min-width: 260px;
      }

      .hero-panel__info h1 {
        margin: 0.3rem 0 0.6rem;
        font-size: 2.1rem;
      }

      .hero-panel__stats {
        display: flex;
        gap: 1rem;
        flex: 1 1 260px;
        justify-content: flex-end;
        min-width: 240px;
      }

      .stat-card {
        flex: 1;
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 1rem 1.1rem;
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
      }

      .stat-card .stat-label {
        font-size: 0.85rem;
        color: var(--muted);
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }

      .stat-card .stat-value {
        font-size: 1.6rem;
        font-weight: 600;
        color: #fff;
      }

      .chip--glow {
        color: #fff;
        border-color: rgba(255, 255, 255, 0.25);
        box-shadow: 0 10px 30px rgba(145, 71, 255, 0.3);
      }

      .panel--grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
      }

      .panel-card {
        background: var(--panel-strong);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 1.25rem;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 0.5rem;
      }

      .panel-card h3 {
        margin: 0;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--muted);
      }

      .status-grid {
        display: flex;
        gap: 0.65rem;
        flex-wrap: wrap;
      }

      .status-card {
        flex: 1 1 120px;
        min-width: 120px;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 12px;
        padding: 0.75rem 0.9rem;
        border: 1px solid rgba(255, 255, 255, 0.04);
      }

      .status-card strong {
        display: block;
        font-size: 1.4rem;
        color: #fff;
      }

      .status-card span {
        font-size: 0.85rem;
        color: var(--muted);
      }

      .token-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        font-size: 0.78rem;
        color: var(--muted);
        background: rgba(255, 255, 255, 0.02);
      }

      .clip-session {
        border: 1px solid rgba(255, 255, 255, 0.02);
        border-radius: 18px;
        padding: 1.25rem;
        background: rgba(13, 15, 24, 0.7);
        margin-bottom: 1rem;
      }

      .clip-session__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
      }

      .clip-session__header h3 {
        margin: 0;
        font-size: 1.1rem;
      }

      .clip-session__header p {
        margin: 0;
        color: var(--muted);
      }

      .clip-session__count {
        font-size: 0.8rem;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .clip-session__list {
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
      }

      .clip-row {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 1rem;
        padding-bottom: 0.9rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
      }

      .clip-row:last-child {
        border-bottom: none;
        padding-bottom: 0;
      }

      .clip-row__meta {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
      }

      .clip-row__time {
        font-size: 0.9rem;
        color: var(--muted-strong);
        margin: 0;
      }

      .clip-row__note {
        margin: 0;
        color: rgba(255, 255, 255, 0.85);
      }

      .clip-status {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        padding: 0.15rem 0.7rem;
        border-radius: 999px;
        border: 1px solid transparent;
      }

      .clip-status--ok {
        color: var(--success);
        border-color: rgba(0, 209, 167, 0.4);
      }

      .clip-status--failed {
        color: var(--danger);
        border-color: rgba(255, 92, 103, 0.4);
      }

      .clip-status--pending {
        color: var(--warn);
        border-color: rgba(255, 203, 66, 0.4);
      }

      .clip-actions {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        align-items: flex-end;
        justify-content: center;
      }

      .clip-link {
        color: #fff;
        text-decoration: none;
        font-weight: 500;
      }

      .clip-link:hover {
        text-decoration: underline;
      }

      .clip-error {
        font-size: 0.8rem;
        color: rgba(255, 92, 103, 0.9);
      }

    </style>
  </head>
  <body>
    <% const sessionActiveFlag = Boolean(sessionActive); %>
    <div class="page-shell">
      <header>
        <div class="brand">
          <div class="brand-icon">Z</div>
          <div>
            <div class="brand-name">Zap Control</div>
            <div class="brand-tagline">Twitch clip orchestrator</div>
          </div>
        </div>
        <div class="header-actions">
          <span class="brand-tagline">Realtime clip queue + ops</span>
          <% if (sessionActiveFlag) { %>
            <a class="button secondary" href="/logout">Log out</a>
          <% } else { %>
            <span class="chip chip--glow">Beta</span>
          <% } %>
        </div>
      </header>
      <main>
        <%- body() %>
      </main>
    </div>
  </body>
</html>
