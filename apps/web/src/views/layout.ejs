<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= title %> | Zap</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Space+Grotesk:wght@500;600&display=swap');

      :root {
        --bg-dark: #03040a;
        --panel: rgba(6, 8, 18, 0.6);
        --panel-strong: rgba(18, 21, 36, 0.95);
        --panel-muted: rgba(10, 12, 20, 0.8);
        --card-border: rgba(255, 255, 255, 0.12);
        --border: rgba(255, 255, 255, 0.12);
        --muted: rgba(255, 255, 255, 0.72);
        --muted-strong: rgba(255, 255, 255, 0.92);
        --accent: #a66dff;
        --accent-strong: #7f3bff;
        --accent-soft: #5c45ff;
        --success: #00d1a7;
        --warn: #ffcb42;
        --danger: #ff6b78;
        --glow: 0 25px 60px rgba(5, 5, 15, 0.55);
        --focus-ring: 0 0 0 3px rgba(145, 71, 255, 0.35);
      }

      * {
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        margin: 0;
        min-height: 100vh;
        background: radial-gradient(circle at 10% 5%, rgba(255, 255, 255, 0.08), transparent 45%),
          radial-gradient(circle at 80% 10%, rgba(145, 71, 255, 0.15), transparent 60%),
          linear-gradient(180deg, var(--bg-dark) 0%, #05050c 65%, #090d1a 100%);
        color: #f5f5f5;
      }

      a {
        color: inherit;
      }

      .page-shell {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background: transparent;
      }

      header {
        padding: 1.25rem 1.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        background: rgba(2, 2, 8, 0.9);
        backdrop-filter: blur(25px);
        position: sticky;
        top: 0;
        z-index: 20;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.85rem;
      }

      .brand-icon {
        width: 48px;
        height: 48px;
        border-radius: 16px;
        background: linear-gradient(145deg, #6b3ef6, #c472ff);
        display: grid;
        place-items: center;
        font-weight: 600;
        letter-spacing: 0.02em;
        font-family: 'Space Grotesk', sans-serif;
        text-transform: uppercase;
      }

      .brand-name {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.15rem;
      }

      .brand-tagline {
        font-size: 0.85rem;
        color: var(--muted);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 0.8rem;
      }

      .header-actions__links {
        display: flex;
        align-items: center;
        gap: 0.4rem;
      }

      main {
        flex: 1;
        width: 100%;
        padding-top: 1rem;
      }

      .content-area {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2.5rem 1.5rem 3.5rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
      }

      .dashboard-grid {
        display: grid;
        grid-template-columns: minmax(280px, 360px) 1fr;
        gap: 2rem;
        align-items: flex-start;
      }

      .dashboard-sidebar {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .dashboard-main {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .panel-card {
        background: var(--panel);
        border: 1px solid var(--card-border);
        border-radius: 24px;
        padding: 2rem;
        box-shadow: var(--glow);
        backdrop-filter: blur(25px);
      }

      .panel-card--accent {
        background: var(--panel-strong);
      }

      .section {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
      }

      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 1rem;
      }

      .section-title {
        margin: 0;
        font-size: 1.45rem;
        letter-spacing: 0.02em;
        font-weight: 600;
      }

      .section-subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
        line-height: 1.4;
      }

      .button,
      .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.4rem;
        padding: 0.85rem 1.5rem;
        border-radius: 999px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
      }

      .btn-primary {
        background: linear-gradient(135deg, var(--accent), var(--accent-strong));
        color: #fff;
        box-shadow: var(--glow);
      }

      .btn-primary:focus-visible,
      .btn-secondary:focus-visible,
      .btn-ghost:focus-visible {
        outline: none;
        box-shadow: var(--focus-ring);
      }

      .btn-secondary {
        background: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
      }

      .btn-ghost {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
      }

      .muted-copy {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
        line-height: 1.5;
      }

      .hero-panel {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        align-items: start;
      }

      .hero-panel__content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .hero-panel__title {
        margin: 0;
        font-size: 2.75rem;
        line-height: 1.2;
        font-weight: 700;
      }

      .hero-panel__subtitle {
        margin: 0;
        color: var(--muted);
        max-width: 520px;
        line-height: 1.5;
      }

      .hero-panel__preview {
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        padding: 1.25rem;
        background: rgba(255, 255, 255, 0.02);
        display: flex;
        flex-direction: column;
        gap: 0.9rem;
      }

      .hero-badge-row {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
      }

      .hero-kpi-caption {
        margin: 0.85rem 0 0.35rem;
        font-size: 0.8rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .hero-kpi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 0.65rem;
      }

      .hero-panel__kpis {
        width: 100%;
      }

      .full-screen-hero {
        min-height: calc(100vh - 110px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.5rem 0;
      }

      .center-card {
        width: min(420px, 90vw);
        text-align: center;
        padding: 4rem 2rem;
        border-radius: 28px;
        background: rgba(10, 12, 20, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 20px 45px rgba(0, 0, 0, 0.45);
      }

      .logo-mark {
        font-size: clamp(3rem, 8vw, 5rem);
        font-family: 'Space Grotesk', sans-serif;
        letter-spacing: 0.2em;
        color: #fff;
        margin: 0 0 2rem;
        position: relative;
        text-transform: uppercase;
      }

      .logo-mark::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 24px;
        background: linear-gradient(135deg, rgba(166, 109, 255, 0.2), rgba(159, 229, 255, 0.15));
        filter: blur(25px);
        opacity: 0;
        animation: glowPulse 3s ease-in-out infinite;
      }

      .connect-btn {
        width: 100%;
        padding: 0.95rem 0;
      }

      @keyframes glowPulse {
        0%,
        100% {
          opacity: 0;
          transform: scale(0.95);
        }
        50% {
          opacity: 1;
          transform: scale(1.05);
        }
      }

      .hero-panel__preview h3 {
        margin: 0;
        font-size: 0.95rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .hero-metrics {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .hero-metrics span {
        font-size: 0.8rem;
        color: var(--muted);
      }

      .hero-metric {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .hero-preview-entry {
        padding: 0.7rem 0.9rem;
        border-radius: 14px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.02);
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.75rem;
      }

      .hero-preview-entry__text {
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
      }

      .hero-preview-entry__note {
        margin: 0;
        color: var(--muted);
        font-size: 0.8rem;
      }

      .hero-preview-entry__status {
        font-size: 0.75rem;
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.15);
      }

      .feature-grid,
      .stat-grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      }

      .feature-card,
      .stat-card {
        background: var(--panel-muted);
        border-radius: 18px;
        padding: 1.5rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        flex-direction: column;
        gap: 0.55rem;
      }

      .feature-card h3,
      .stat-card h3 {
        margin: 0;
        font-size: 1.05rem;
        font-weight: 600;
      }

      .feature-card p,
      .stat-card p {
        margin: 0;
        color: var(--muted);
        font-size: 0.95rem;
      }

      .feature-icon {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: grid;
        place-items: center;
        background: linear-gradient(145deg, rgba(145, 71, 255, 0.25), rgba(111, 47, 242, 0.25));
      }

      .badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.85rem;
        border-radius: 999px;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .badge--beta {
        background: rgba(145, 71, 255, 0.2);
        border-color: rgba(145, 71, 255, 0.45);
      }

      .badge--status-ready {
        background: rgba(12, 255, 170, 0.15);
        border-color: rgba(12, 255, 170, 0.35);
        color: #00d1a7;
      }

      .badge--status-failed {
        background: rgba(255, 92, 103, 0.15);
        border-color: rgba(255, 92, 103, 0.35);
        color: var(--danger);
      }

      .badge--status-pending {
        background: rgba(255, 203, 66, 0.2);
        border-color: rgba(255, 203, 66, 0.35);
        color: var(--warn);
      }

      .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.35rem 0.95rem;
        border-radius: 999px;
        border: 1px solid transparent;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
      }

      .status-badge--ready {
        color: #00d1a7;
        border-color: rgba(0, 209, 167, 0.45);
        background: rgba(0, 209, 167, 0.12);
      }

      .status-badge--failed {
        color: var(--danger);
        border-color: rgba(255, 92, 103, 0.45);
        background: rgba(255, 92, 103, 0.12);
      }

      .status-badge--pending {
        color: #f7c667;
        border-color: rgba(255, 203, 66, 0.45);
        background: rgba(255, 203, 66, 0.12);
      }

      .status-badge--offline {
        color: var(--muted);
        border-color: rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.05);
      }


      .stat-card span {
        font-size: 0.85rem;
        color: var(--muted);
      }

      .token-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.9rem;
        border-radius: 999px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.04);
        font-size: 0.8rem;
      }

      .timeline {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
      }

      .session-card {
        background: rgba(14, 16, 29, 0.75);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 22px;
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .session-card__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .session-card__header h3 {
        margin: 0;
        font-size: 1.25rem;
      }

      .session-card__subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 0.9rem;
      }

      .session-card__count {
        font-size: 0.8rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--muted);
      }

      .timeline-divider {
        height: 1px;
        background: rgba(255, 255, 255, 0.08);
        border: none;
        margin: 0;
      }

      .timeline-row {
        display: grid;
        grid-template-columns: 140px 1fr auto;
        gap: 1rem;
        padding: 1rem 1.25rem;
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        background: rgba(19, 21, 32, 0.85);
        align-items: center;
        transition: border-color 0.2s ease, transform 0.2s ease, box-shadow 0.2s ease;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
      }

      .timeline-row:hover {
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-1px);
        box-shadow: 0 16px 32px rgba(0, 0, 0, 0.45);
      }

      .timeline-row__timestamp {
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.7);
        text-transform: uppercase;
        letter-spacing: 0.12em;
        line-height: 1.4;
      }

      .timeline-row__meta {
        margin: 0.35rem 0 0;
        color: rgba(255, 255, 255, 0.55);
        font-size: 0.78rem;
      }

      .timeline-row__content {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        justify-content: center;
      }

      .timeline-row__note {
        margin: 0;
        font-weight: 600;
        font-size: 1.05rem;
        line-height: 1.4;
      }

      .timeline-row__status {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.35rem 0.85rem;
        border-radius: 999px;
        font-size: 0.75rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        border: 1px solid transparent;
        white-space: nowrap;
      }

      .timeline-row[data-status='ready'] {
        background: rgba(0, 209, 167, 0.05);
      }

      .timeline-row[data-status='failed'] {
        border-color: rgba(255, 92, 103, 0.35);
        background: rgba(255, 92, 103, 0.08);
      }

      .timeline-row__status.ready {
        color: #00d1a7;
        border-color: rgba(0, 209, 167, 0.45);
        background: rgba(0, 209, 167, 0.12);
      }

      .timeline-row__status.failed {
        color: var(--danger);
        border-color: rgba(255, 92, 103, 0.45);
        background: rgba(255, 92, 103, 0.12);
      }

      .timeline-row__status.pending {
        color: #f7c667;
        border-color: rgba(255, 203, 66, 0.45);
        background: rgba(255, 203, 66, 0.12);
      }

      .timeline-row__actions {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        align-items: flex-end;
      }

      .timeline-row__actions a {
        font-size: 0.9rem;
        font-weight: 600;
        color: #fff;
        text-decoration: none;
      }

      .timeline-row__actions a:hover {
        text-decoration: underline;
      }

      .timeline-row__actions .clip-cta {
        text-transform: none;
      }

      .timeline-row__error {
        font-family: 'IBM Plex Mono', 'SFMono-Regular', Consolas, monospace;
        font-size: 0.8rem;
        color: #ffb8c0;
        background: rgba(255, 92, 103, 0.12);
        border-radius: 12px;
        border: 1px solid rgba(255, 92, 103, 0.25);
        padding: 0.7rem 0.85rem;
        line-height: 1.2;
        max-height: 160px;
        overflow: auto;
        white-space: pre-wrap;
        word-break: break-word;
      }

      .timeline-row__error summary {
        cursor: pointer;
        font-weight: 600;
        display: inline-flex;
        gap: 0.4rem;
        align-items: center;
      }

      .clip-link.clip-cta {
        padding: 0.45rem 1rem;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        background: rgba(255, 255, 255, 0.06);
        transition: background 0.15s ease;
      }

      .clip-link.clip-cta:hover {
        background: rgba(255, 255, 255, 0.14);
      }

      .timeline-empty {
        padding: 1.5rem;
        border-radius: 16px;
        border: 1px dashed rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.02);
        color: var(--muted);
        font-size: 0.95rem;
      }

      .stream-health-panel {
        background: rgba(15, 17, 30, 0.95);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        padding: 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .stream-health-panel__grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
      }

      .stream-health-panel__item {
        border-radius: 16px;
        padding: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.02);
      }

      .stream-health-panel__item strong {
        font-size: 1.3rem;
        display: block;
      }

      footer {
        margin-top: 2rem;
        padding: 1.5rem 1.75rem;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.85rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      @media (max-width: 860px) {
        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 0.75rem;
        }

        .timeline-row {
          grid-template-columns: 1fr;
        }

        .timeline-row__actions {
          align-items: flex-start;
        }

        .content-area {
          padding: 2rem 1.25rem 3rem;
        }
        .dashboard-grid {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 520px) {
        .hero-panel__title {
          font-size: 2.2rem;
        }

        .panel-card {
          padding: 1.4rem;
        }

        .session-card {
          padding: 1.25rem;
        }

        .stream-health-panel {
          padding: 1.25rem;
        }
      }
      /* Admin UI */
      .admin-shell {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      .admin-hero {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
      }

      .admin-hero__kpis {
        display: flex;
        gap: 1rem;
      }

      .admin-summary-grid {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
      }

      .admin-summary-card {
        background: var(--panel);
        border: 1px solid var(--card-border);
        border-radius: 18px;
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
      }

      .admin-status-grid {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.75rem;
      }

      .admin-status-card {
        background: var(--panel);
        border: 1px solid var(--card-border);
        border-radius: 18px;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .admin-last24 {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 0.65rem;
      }

      .admin-subheader {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
      }

      .admin-top-channels {
        margin-top: 1.5rem;
      }

      .admin-top-channel-list {
        display: flex;
        flex-direction: column;
        gap: 0.65rem;
      }

      .admin-top-channel-row {
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 0.8rem;
        align-items: center;
        padding: 0.85rem 1rem;
        border-radius: 14px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        background: rgba(255, 255, 255, 0.02);
      }

      .admin-recent {
        margin-top: 2rem;
      }

      .admin-recent-grid {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
      }

      .admin-recent-card {
        background: var(--panel);
        border: 1px solid var(--card-border);
        border-radius: 18px;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.65rem;
      }

      .admin-recent-card__meta {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
      }

      .admin-recent-card__actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .admin-error-details {
        font-family: 'IBM Plex Mono', 'SFMono-Regular', Consolas, monospace;
        font-size: 0.8rem;
        color: #ffb8c0;
        background: rgba(255, 92, 103, 0.12);
        border-radius: 12px;
        border: 1px solid rgba(255, 92, 103, 0.25);
        padding: 0.65rem 0.8rem;
        line-height: 1.3;
        max-height: 140px;
        overflow: auto;
        white-space: pre-wrap;
        word-break: break-word;
      }

      .admin-error-details summary {
        cursor: pointer;
        font-weight: 600;
        display: inline-flex;
        gap: 0.35rem;
        align-items: center;
      }

      .admin-table-wrapper {
        margin-top: 1rem;
        width: 100%;
        overflow-x: auto;
      }

      .admin-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 720px;
      }

      .admin-table th,
      .admin-table td {
        padding: 0.85rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        text-align: left;
        font-size: 0.95rem;
      }

      .admin-table thead th {
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-size: 0.75rem;
        color: var(--muted);
        position: sticky;
        top: 0;
        background: rgba(2, 3, 11, 0.95);
        z-index: 2;
      }

      .admin-table tbody tr:hover {
        background: rgba(255, 255, 255, 0.02);
      }

      .admin-filter-bar {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)) auto;
        gap: 0.75rem;
        align-items: end;
      }

      .admin-filter-bar label {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        font-size: 0.8rem;
        color: var(--muted);
        letter-spacing: 0.08em;
        text-transform: uppercase;
      }

      .admin-filter-bar select,
      .admin-filter-bar input {
        background: rgba(255, 255, 255, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 0.65rem 0.85rem;
        color: #fff;
      }

      .admin-filter-search input {
        min-width: 200px;
      }

      .admin-pagination {
        margin-top: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .token-pill--valid {
        border-color: rgba(0, 209, 167, 0.6);
        color: #00d1a7;
      }

      .token-pill--expired {
        border-color: rgba(255, 92, 103, 0.6);
        color: var(--danger);
      }

      .token-pill--unknown {
        border-color: rgba(255, 255, 255, 0.4);
        color: var(--muted-strong);
      }

      @media (max-width: 860px) {
        .admin-hero {
          flex-direction: column;
          align-items: flex-start;
        }

        .admin-summary-grid,
        .admin-status-grid,
        .admin-last24 {
          grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        }

        .admin-filter-bar {
          grid-template-columns: 1fr;
        }

        .admin-table {
          min-width: unset;
        }

        .admin-table thead {
          display: none;
        }

        .admin-table tbody tr {
          display: grid;
          grid-template-columns: 1fr;
          gap: 0.35rem;
          padding: 0.8rem 0;
          border-bottom: 1px solid rgba(255, 255, 255, 0.08);
        }

        .admin-table td {
          display: flex;
          justify-content: space-between;
          flex-wrap: wrap;
          gap: 0.35rem;
          font-size: 0.9rem;
        }

        .admin-table td::before {
          content: attr(data-label);
          flex: 1 1 100%;
          font-size: 0.7rem;
          color: var(--muted);
          letter-spacing: 0.08em;
          text-transform: uppercase;
        }
      }
    </style>
  </head>
  <body>
    <% const sessionActiveFlag = Boolean(sessionActive); %>
    <div class="page-shell">
      <header>
        <div class="brand">
          <div class="brand-icon">Z</div>
          <div>
            <div class="brand-name">Zap</div>
          </div>
        </div>
        <div class="header-actions">
          <span class="brand-tagline">A clip bot</span>
          <% if (sessionActiveFlag) { %>
            <div class="header-actions__links">
              <% if (showAdminLink) { %>
                <a class="btn btn-ghost" href="/admin">Admin</a>
              <% } %>
              <a class="btn btn-secondary" href="/logout">Log out</a>
            </div>
          <% } else { %>
            <span class="chip chip--glow">Beta</span>
          <% } %>
        </div>
      </header>
      <main>
        <div class="content-area">
          <%- body() %>
        </div>
      </main>
    </div>
  </body>
</html>
