{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i src/styles/tailwind.css -o src/views/tailwind.generated.css --minify",
    "dev": "pnpm run build:css && dotenv -e ../../.env -- tsx --watch src/index.ts",
    "build": "pnpm run build:css && tsc -b",
    "start": "dotenv -e ../../.env -- node dist/index.js",
    "prisma": "prisma",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/view": "^11.1.1",
    "@prisma/client": "^5.22.0",
    "@zap/core": "workspace:^",
    "ejs": "^3.1.9",
    "fastify": "^5.7.2",
    "@fastify/cookie": "^11.0.2",
    "@fastify/secure-session": "^8.3.0",
    "pino": "^8.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "prisma": "5.22.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2"
  }
}
